@model Web_Coffee.Models.NguoiDung

@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Share/_HomeLayout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Đăng nhập</h2>
                    @using (Html.BeginForm("AuthenLogin", "Login", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
                    {
                        <!-- Hiển thị thông báo lỗi đăng nhập tổng quát -->
                        if (ViewBag.ErrorMessage != null)
                        {
                            <div class="alert alert-danger text-center">
                                @ViewBag.ErrorMessage
                            </div>
                        }

                        <div class="mb-3">
                            @Html.LabelFor(m => m.UserName, new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Nhập tên đăng nhập" })
                            @if (ViewBag.ErrorName != null)
                            {
                                <div class="text-danger">@ViewBag.ErrorName</div>
                            }
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.Pass, new { @class = "form-label" })
                            @Html.PasswordFor(m => m.Pass, new { @class = "form-control", placeholder = "Nhập mật khẩu" })
                            @Html.ValidationMessageFor(m => m.Pass, "", new { @class = "text-danger" })
                            @if (ViewBag.ErrorPass != null)
                            {
                                <div class="text-danger">@ViewBag.ErrorPass</div>
                            }
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Đăng nhập</button>
                        </div>
                    }
                </div>
            </div>
            <div class="text-center mt-3">
                <p>Chưa có tài khoản? <a href="/Login/Register" class="fw-bold">Đăng ký ngay</a></p>
            </div>
        </div>
    </div>
</div>


<style>
    body {
        background-color: #f8f9fa;
    }

    .card {
        border-radius: 1rem;
    }

    .card-title {
        color: #333;
        font-weight: bold;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }
</style>
