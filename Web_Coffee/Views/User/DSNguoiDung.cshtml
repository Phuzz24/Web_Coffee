@model IEnumerable<Web_Coffee.Models.NguoiDung>
@{
    ViewBag.Title = "DSNguoiDung";
    Layout = "~/Views/Share/_AdminLayout.cshtml";
}

<h2>Danh Sách Người Dùng</h2>

<div class="row mb-3">
    <div class="col-md-8">
        @using (Html.BeginForm("DSNguoiDung", "User", FormMethod.Get, new { @class = "form-inline" }))
        {
            <div class="input-group">
                @Html.TextBox("searchString", ViewBag.CurrentFilter as string, new { @class = "form-control", @placeholder = "Tìm kiếm theo tên người dùng" })
                <div class="input-group-append">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-search"></i> Tìm kiếm
                    </button>
                </div>
            </div>
        }
    </div>
    <div class="col-md-4 text-right">
        @Html.ActionLink("Tạo Mới", "Create", null, new { @class = "btn btn-success" })
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.IDNguoiDung)</th>
            <th>@Html.DisplayNameFor(model => model.Role)</th>
            <th>@Html.DisplayNameFor(model => model.UserName)</th>
            <th>@Html.DisplayNameFor(model => model.Pass)</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.IDNguoiDung)</td>
                <td>@Html.DisplayFor(modelItem => item.Role)</td>
                <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                <td>@Html.DisplayFor(modelItem => item.Pass)</td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.IDNguoiDung }, new { @class = "btn btn-sm btn-primary" })
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.IDNguoiDung }, new { @class = "btn btn-sm btn-info" })
                    @Html.ActionLink("Xóa", "Delete", new { id = item.IDNguoiDung }, new { @class = "btn btn-sm btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>
