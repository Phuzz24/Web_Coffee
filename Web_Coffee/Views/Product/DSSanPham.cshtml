@model IEnumerable<Web_Coffee.Models.SanPham>
@{
    ViewBag.Title = "Danh Sách Sản phẩm";
    Layout = "~/Views/Share/_AdminLayout.cshtml";
}
<h2>Danh Sách Sản phẩm</h2>
<div class="row mb-3">
    <div class="col-md-8">
        @using (Html.BeginForm("DSSanPham", "Product", FormMethod.Get, new { @class = "form-inline" }))
        {
            <div class="input-group">
                @Html.TextBox("searchString", ViewBag.CurrentFilter as string, new { @class = "form-control", @placeholder = "Tìm kiếm theo tên sản phẩm" })
                <div class="input-group-append">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-search"></i> Tìm kiếm
                    </button>
                </div>
            </div>
        }
    </div>
    <div class="col-md-4 text-right">
        @Html.ActionLink("Tạo Mới", "Create", null, new { @class = "btn btn-success" })
    </div>
</div>
<table class="table table-striped">
    <thead>
        <tr>
            <th>ID Sản phẩm</th>
            <th>Code Sản phẩm</th>
            <th>Tên sản phẩm</th>
            <th>Giá</th>
            <th>Size</th>
            <th>Số lượng</th>
            <th>ID Nhà CC</th>
            <th>ID Loại SP</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IDSanPham</td>
                <td>@item.CodeSanPham</td>
                <td>@item.TenSanPham</td>
                <td>@string.Format("{0:N0} đ", item.Gia)</td>
                <td>@item.Size</td>
                <td>@item.Quantity</td>
                <td>@item.IDNCC</td>
                <td>@item.IDCategory</td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.IDSanPham }, new { @class = "btn btn-sm btn-primary" })
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.IDSanPham }, new { @class = "btn btn-sm btn-info" })
                    @Html.ActionLink("Xóa", "Delete", new { id = item.IDSanPham }, new { @class = "btn btn-sm btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>
