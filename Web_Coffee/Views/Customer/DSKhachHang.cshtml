@model IEnumerable<Web_Coffee.Models.KhachHang>
@{
    ViewBag.Title = "DSKhachHang";
    Layout = "~/Views/Share/_AdminLayout.cshtml";
}
<h2>Danh Sách Nhân Viên</h2>
<div class="row mb-3">
    <div class="col-md-8">
        @using (Html.BeginForm("DSKhachHang", "Customer", FormMethod.Get, new { @class = "form-inline" }))
        {
            <div class="input-group">
                @Html.TextBox("searchString", ViewBag.CurrentFilter as string, new { @class = "form-control", @placeholder = "Tìm kiếm theo tên nhân viên" })
                <div class="input-group-append">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-search"></i> Tìm kiếm
                    </button>
                </div>
            </div>
        }
    </div>
    <div class="col-md-4 text-right">
        @Html.ActionLink("Tạo Mới", "Create", null, new { @class = "btn btn-success" })
    </div>
</div>
<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.IDKhachHang)</th>
            <th>@Html.DisplayNameFor(model => model.CodeKhachHang)</th>
            <th>@Html.DisplayNameFor(model => model.HoTenKH)</th>
            <th>@Html.DisplayNameFor(model => model.DiaChiKH)</th>
            <th>@Html.DisplayNameFor(model => model.GmailKH)</th>
            <th>@Html.DisplayNameFor(model => model.SDTKH)</th>
            <th>@Html.DisplayNameFor(model => model.IDNguoiDung)</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.IDKhachHang)</td>
                <td>@Html.DisplayFor(modelItem => item.CodeKhachHang)</td>
                <td>@Html.DisplayFor(modelItem => item.HoTenKH)</td>
                <td>@Html.DisplayFor(modelItem => item.DiaChiKH)</td>
                <td>@Html.DisplayFor(modelItem => item.GmailKH)</td>
                <td>@Html.DisplayFor(modelItem => item.SDTKH)</td>
                <th>@Html.DisplayFor(modelItem => item.IDNguoiDung)</th>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.IDKhachHang }, new { @class = "btn btn-sm btn-primary" })
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.IDKhachHang }, new { @class = "btn btn-sm btn-info" })
                    @Html.ActionLink("Xóa", "Delete", new { id = item.IDKhachHang }, new { @class = "btn btn-sm btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>