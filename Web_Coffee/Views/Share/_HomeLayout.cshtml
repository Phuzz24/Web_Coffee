<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8" />
    <link rel="icon" href="~/Image/icon-logo.png" type="image/x-icon" />
    <title>Boiz Coffee</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/_wed.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <style>
        .user-info {
            display: flex;
            flex-direction: column;
            align-items: flex-end;
            justify-content: center;
            text-align: right;
        }

        .user-info .welcome {
            font-size: 0.8em;
            margin-bottom: 2px;
        }

        .user-info .logout {
            font-size: 0.9em;
        }

        

            .user-info .welcome,
            .user-info .logout {
                font-size: 0.8em;
                margin: 0 5px;
            }
        }
    </style>
</head>
<body>
    <header id="header" class="container py-2">
        <nav class="container-fluid">
            <div class="row align-items-center">
                <div class="col-1 position-relative">
                    <a class="icon-cart" href="/ShoppingCart/ShowToCart">
                        <i class="fa-brands fa-opencart text-black fs-4"></i>
                        @Html.Action("BagCart", "ShoppingCart")
                    </a>
                </div>

                <div class="col-10 px-3">
                    <div class="row align-items-center">
                        <div class="col-5 d-flex justify-content-evenly align-items-center">
                            <ul class="nav fw-medium">
                                <li class="nav-item">
                                    <a class="nav-link text-black" href="/home/home">TRANG CHỦ</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-black" href="/home/gioithieu_nguongoc">KHUYẾN MÃI</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-black" href="/ProductClient/Index">SẢN PHẨM</a>
                                </li>
                            </ul>
                        </div>

                        <div class="col-2 px-0 text-center">
                            <a href="/">
                                <img src="~/Image/logo-cafe.png" alt="Boiz Coffee" />
                            </a>
                        </div>

                        <div class="col-5 d-flex justify-content-evenly align-items-center">
                            <ul class="nav fw-medium">
                                <li class="nav-item">
                                    @if (Session["UserID"] != null)
                                    {
                                        <!-- Hiển thị tên người dùng với dropdown chức năng -->
                                        <div class="dropdown">
                                            <a class="nav-link text-black welcome" href="#" id="userDropdown" role="button">
                                                Xin chào, @Session["UserName"]
                                            </a>
                                            <div class="dropdown-content">
                                                <a class="dropdown-item" href="/User/Profile">Thông tin đặt hàng</a>
                                                <a class="dropdown-item" href="/User/OrderHistory">Lịch sử đơn hàng</a>
                                                <div class="dropdown-divider"></div>
                                                <a class="dropdown-item text-danger" href="/Login/Logout">Đăng xuất</a>
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <!-- Hiển thị nút đăng nhập khi chưa đăng nhập -->
                                        <a class="nav-link text-black" href="/Login/Login">ĐĂNG NHẬP</a>
                                    }
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-black" href="/login/register">ĐĂNG KÍ</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

                
            </div>
        </nav>
    </header>



</body>
</html>




<hr />

@RenderBody()

<section class="container">
    <div class="btn-contact text-center py-5">
        <h1>Bạn đang quan tâm gì?</h1>
        <a class="py-3" href="/ProductClient/Index">THAM KHẢO SẢN PHẨM</a>
    </div>
</section>

<Footer id="footer">
    <div class="list-footer container row">
        <div class="col-6 ">
            <h2>Liên hệ</h2>
            <div class="footer-contact">
                <a href="/">
                    <img src="~/Image/logo-cafe.png" />
                </a>
            </div>

            <h2>Fanpage</h2>
            <div class="position-relative mx-auto" style="width:350px">
                <img class="rounded d-block mx-auto position-absolute" src="~/Image/bg-facebook.png" style="width:350px; height:140px" />
                <div class="position-absolute">
                    <div class=" d-flex pt-1 ps-1">
                        <a href="https://vi-vn.facebook.com/"><img src="~/Image/logo-facebook.png" style="width: 50px" /></a>
                        <a href="https://vi-vn.facebook.com/"><img src="~/Image/facebook.png" style="height: 50px" /></a>
                    </div>
                    <div class="fanpage">
                        <a class="follow-page " href="https://vi-vn.facebook.com/" style="float:left">Theo dõi trang</a>
                        <a class="share-page " href="https://vi-vn.facebook.com/" style="float:right"><i class="fa-solid fa-share"></i> Chia sẻ</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-6 ">
            <h2>Điều khoản</h2>
            <ul class="dieukhoan">
                <li class="ps-5"><a class="text-white-50" href="/home/dieukhoan_sudung">Điều khoản sử dụng</a></li>
                <li class="ps-5"><a class="text-white-50" href="/home/chinhsach_baomat">Chính sách bảo mật</a></li>
            </ul>
            <h2 class="pt-4 pb-2">Giới thiệu</h2>
            <ul>
                <li class="text-white-50 ps-5"><i class="fa-solid fa-location-dot"></i> 828 Sư Vạn Hạnh, Phường 13, Quận 10, TP.HCM</li>
                <li class="text-white-50 ps-5"><i class="fa-solid fa-phone"></i> 0123 456 789</li>
                <li class="text-white-50 ps-5"><i class="fa-solid fa-envelope"></i> support@st.huflit.edu.vn</li>
            </ul>
        </div>
    </div>
</Footer>

<div id="zalo">
    <a href="https://id.zalo.me/account?continue=https://chat.zalo.me">
        <img src="~/Image/zalo.png" />
    </a>
</div>

<div id="scroll-top">
    <a href="#"><img src="~/Image/icon-arrow.png" /></a>
</div>

<script>
    window.addEventListener('scroll', function () {
        if (window.scrollY > 350) {
            document.getElementById('scroll-top').style.display = 'block';
        }
        else {
            document.getElementById('scroll-top').style.display = 'none';
        }
    });
</script>
</body>
</html>
